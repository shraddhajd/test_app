<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
     <%= render 'shared/error' %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row mb-2">
          <%= form.label :title, class: "col-2 col-form-label text-light", style: "display: block" %>
          <div class="col-10">
          <%= form.text_field :title, class:"form-control shadow-lg rounded", placeholder: "Title of article" %>
          </div>
        </div> 

        <div class="form-group row mb-2">
          <%= form.label :description, class: "col-2 col-form-label text-light", style: "display: block" %>
          <div class="col-10">
          <%= form.text_area :description, rows:10, class:"form-control shadow-lg rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group col text-center">
          <%= form.submit class:"btn btn-outline-light" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mb-3">
  <%= link_to "[ Cancel and return to articles listing] ", articles_path, class: "row justify-content-center mb-4 text-info"%>
  </div>
</div>