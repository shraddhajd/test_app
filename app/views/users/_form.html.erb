<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
     <%= render 'shared/error', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
        <div class="form-group row mb-2">
          <%= form.label :username, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.text_field :username, class:"form-control shadow-lg rounded", placeholder: "Enter a username" %>
          </div>
        </div> 

        <div class="form-group row mb-2">
          <%= form.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.email_field :email, class:"form-control shadow-lg rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row mb-2">
          <%= form.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.password_field :password, class:"form-control shadow-lg rounded", placeholder: "Choose a Password" %>
          </div>
        </div>

        <div class="form-group col text-center">
          <%= form.submit class:"btn btn-outline-light" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mb-3">
  <%= link_to "[ Cancel and return to articles listing] ", articles_path, class: "row justify-content-center mb-4 text-info"%>
  </div>
</div>