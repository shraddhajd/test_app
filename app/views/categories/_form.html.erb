<%= render 'shared/error', obj: @category %>
  <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
    
    <div class="form-group row mb-2">
      <%= form.label :name, "Category name", class: "col-2 col-form-label text-light" %>
      <div class="col-10">
      <%= form.text_field :name, class:"form-control shadow-lg rounded", placeholder: "Enter a name" %>
      </div>
    </div> 

    <div class="form-group col text-center">
      <%= form.submit class:"btn btn-outline-light" %>
    </div>
<% end %>