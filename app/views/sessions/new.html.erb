<h1 class="text-center mt-2">Log in</h1>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
      
        <div class="form-group row mb-2">
          <%= form.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.email_field :email, class:"form-control shadow-lg rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row mb-2">
          <%= form.label :password, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
          <%= form.password_field :password, class:"form-control shadow-lg rounded", placeholder: "Enter your Password" %>
          </div>
        </div>

        <div class="form-group col text-center mt-3">
          <%= form.submit "Log in", class:"btn btn-outline-light" %>
          <%= link_to "Back Home page", home_path, class: "btn btn-outline-light"%>
        </div>
      <% end %>
    </div>
  </div>
</div>